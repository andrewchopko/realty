= provide(:title, "Недвижимость")

- if user_signed_in?
  = link_to " Добавить", new_house_path, class: "btn btn-success fa fa-plus-square"
.results
  - @houses.each do |house|
    .row.result
      .col-xs-3.col-sm-3.col-md-3.col-lg-3{:style => "text-align: center"}
        - if house.house_photos.first.present?
          = link_to image_tag(house.house_photos.first.image.url), house
      .col-xs-7.col-sm-7.col-md-7.col-lg-7
        %h3
          = link_to house.district + ", " + house.street, house
        %h4
          = "Этаж: "+house.floor.to_s+"/"+house.floor_quantity.to_s+", Площадь: " + house.square_all.to_s + "/"+ house.square_live.to_s + "/" + house.square_kitchen.to_s + ", Комнат: " + house.room_quantity.to_s + ", " + house.category.name.downcase
      .col-xs-2.col-sm-2.col-md-2.col-lg-2.cost
        %h2
          = house.price.to_s
          %i.fa.fa-usd{"aria-hidden" => "true"}
